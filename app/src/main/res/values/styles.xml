<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MyAppTheme" parent="AppTheme">
        <item name="android:background">@color/bg_gray</item>
    </style>

    <!--标题字体样式-->
    <style name="activity_title_style">
        <item name="android:textSize">@dimen/app_title_text</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--按钮颜色样式-->
    <style name="bg_btn_style">
        <item name="android:textSize">@dimen/app_title_text</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Transparent" parent="AppTheme.NoActionBar">
        <!--将Activity的Theme设置成透明-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--主题栏样式-->
    <style name="activity_top_bar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingBottom">@dimen/app_title_text_padding_bottom</item>
        <item name="android:paddingTop">@dimen/app_title_text_padding_top</item>
        <item name="android:background">@color/app_theme</item>
    </style>
</resources>
